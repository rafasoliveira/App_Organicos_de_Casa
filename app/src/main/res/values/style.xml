<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ContainerLogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>

    </style>

    <style name="ContainerNavegacao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/greenodc</item>
    </style>

    <style name="BotaoNavegacao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="backgroundTint">@color/greenodc</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">3dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">3dp</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/brownwood</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bt_entrar</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/bt_entrar</item>
    </style>

    <style name="banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/botton_banner</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">20dp</item>


    </style>

</resources>