<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/barLogo"
        style="@style/barLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:src="@drawable/odclogo_linhatransp"
        app:layout_constraintTop_toTopOf="@id/barLogo"
        app:layout_constraintStart_toStartOf="@id/barLogo"
        app:layout_constraintEnd_toEndOf="@id/barLogo"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saudacao"
        android:textSize="15dp"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@+id/logo"

        app:layout_constraintStart_toStartOf="@id/barLogo"
        app:layout_constraintEnd_toEndOf="@id/barLogo"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>